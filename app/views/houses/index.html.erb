<div class="container">
  <%= form_tag houses_path, method: 'get' do %>
  <h5 class>家賃</h5>
    <div class="row">
      <div class="col-3">
        <select class="custom-select my-1 mr-sm-2" id="inlineFormCustomSelectPref" name="min_rent">
          <option value="24000" selected>25000円</option>
          <option value="25000">25000円</option>
          <option value="26000">26000円</option>
          <option value="27000">27000円</option>
        </select>
      </div>
      <div class="col-1"><label class="my-1 mr-2" for="inlineFormCustomSelectPref">~</label></div>
      <div class="col-3">
        <select class="custom-select my-1 mr-sm-2" id="inlineFormCustomSelectPref" name="max_rent">
          <option value="110000" selected>110000円</option>
          <option value="26000">26000円</option>
          <option value="27000">27000円</option>
          <option value="28000">28000円</option>
        </select>
    </div>
  </div> 
  
  <div class="media-body">
   <h5 class="p-2">条件</h5>
      <table class="table">
        <tbody>
          <tr>
            <th scope="row">性別</th>
            <td>
              <select class="custom-select my-1 mr-sm-2" id="inlineFormCustomSelectPref" name="gender_type">
                <option value="1" selected>男性専用</option>
                <option value="2">女性専用</option>
                <option value="3">男女兼用</option>
              </select>
            </td>
            <th scope="row">タイプ</th>
            <td>
              <select class="custom-select my-1 mr-sm-2" id="inlineFormCustomSelectPref" name="room_type">
                <option value="個室" selected>個室</option>
                <option value="ドミトリー">ドミトリー</option>
                <option value="ルームシェア">ルームシェア</option>
              </select>
            </td>
            <th scope="row">空き状況</th>
            <td>
              <select class="custom-select my-1 mr-sm-2" id="inlineFormCustomSelectPref" name="room_condition">
                <option value="空き" selected>空き</option>
                <option value="空室予定">空室予定</option>
                <option value="満室">満室</option>
              </select>
            </td>
          </tr>
          <tr>
            <th scope="row">職種</th>
            <td>
              <select class="custom-select my-1 mr-sm-2" id="inlineFormCustomSelectPref" name="job">
                <option value="学生" selected>学生</option>
                <option value="事務職">事務職</option>
                <option value="営業">営業</option>
                <option value="企画">企画</option>
                <option value="エンジニア">エンジニア</option>
                <option value="公務員">公務員</option>
              </select>
            </td>
            <th scope="row">年代</th>
            <td>
              <select class="custom-select my-1 mr-sm-2" id="inlineFormCustomSelectPref" name="generation">
                <option value="10" selected>10代多め</option>
                <option value="20">20代多め</option>
                <option value="30">30代多め</option>
                <option value="40">40代多め</option>
                <option value="50">50代多め</option>
                <option value="60">60代多め</option>
              </select>
            </td>
            <th scope="row">その他</th>
            <td>
              <select class="custom-select my-1 mr-sm-2" id="inlineFormCustomSelectPref" name="conditon">
                <option value="駅近" selected>駅近</option>
                <option value="家賃安め">家賃安め</option>
                <option value="住人少なめ">住人少なめ</option>
              </select>
            </td>
          </tr>
        </tbody>
      </table>
      <div class="clearfix">
      <button type="submit" class="btn btn-primary float-right">検索</button>
    </div>
  </div>
  <% end %>
</div>


  <div class="container">
    <ul class="list-unstyled">
      <% @houses.each do |house| %>
      <li class="media">
        <img src="https://img17.shop-pro.jp/PA01273/059/product/134931945_th.jpg?cmsp_timestamp=20180908164923" class="m-3" style="width: 250px; height: auto;" alt="...">
        <div class="media-body">
          <h5 class="p-3"><%= link_to house.name, house_path(house) %></h5>
          <table class="table">
            <tbody>
              <tr>
                <th scope="row">場所</th>
                <td><%= house.address %></td>
              </tr>
              <tr>
                <th scope="row">アクセス</th>
                <td><%= house.access %></td>
              </tr>
              <tr>
                <th scope="row">家賃</th>
                <td>10万円</td>
              </tr>
            </tbody>
          </table>
        </div>
      </li>
      <% end %>
  
  <nav aria-label="Page navigation example">
    <ul class="pagination justify-content-center">
      <li class="page-item disabled">
        <a class="page-link" href="#" tabindex="-1" aria-disabled="true">前へ</a>
      </li>
      <li class="page-item"><a class="page-link" href="#">1</a></li>
      <li class="page-item"><a class="page-link" href="#">2</a></li>
      <li class="page-item"><a class="page-link" href="#">3</a></li>
      <li class="page-item">
        <a class="page-link" href="#">次へ</a>
      </li>
    </ul>
  </nav>

    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
  </body>
</html>